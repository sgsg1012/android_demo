<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.wydemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WyDemo"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".NotSignInActivity"
            android:exported="false" />
        <activity
            android:name=".RewardTaskContentActivity"
            android:exported="false" />
        <activity
            android:name=".RewardTaskActivity"
            android:exported="false"
            android:label="互助任务" />
        <activity
            android:name=".TaskActivity"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.wydemo.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".LectureContentActivity"
            android:exported="false" />
        <activity
            android:name=".LectureActivity"
            android:exported="false" />
        <activity
            android:name=".InfosInSchoolActivity"
            android:exported="false"
            android:label="校内资讯" />
        <activity
            android:name=".MessageActivity"
            android:exported="false" />
        <activity
            android:name=".SearchActivity"
            android:exported="false" />
        <activity
            android:name=".AnswerProveActivity"
            android:exported="false" />
        <activity
            android:name=".SetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".TestActivity"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:exported="false"
            android:label="登录" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:label="注册" />
        <activity
            android:name=".PublishActivity"
            android:exported="false"
            android:label="发布" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.noActionBar.WyDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>